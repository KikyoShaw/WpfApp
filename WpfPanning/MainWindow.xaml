<Window x:Class="WpfPanning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPanning"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Horizontal">
                <local:PanningItems>
                    <Image Source="Resources/0.jpg"/>
                    <Image Source="Resources/1.jpg"/>
                    <Image Source="Resources/2.jpg"/>
                    <Image Source="Resources/3.jpg"/>
                    <Image Source="Resources/4.jpg"/>
                </local:PanningItems>
            </TabItem>
            <TabItem Header="Vertical">
                <local:PanningItems ScrollDirection="Vertical">
                    <Image Source="Resources/0.jpg"/>
                    <Image Source="Resources/1.jpg"/>
                    <Image Source="Resources/2.jpg"/>
                    <Image Source="Resources/3.jpg"/>
                    <Image Source="Resources/4.jpg"/>
                </local:PanningItems>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
