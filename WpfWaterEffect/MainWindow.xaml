        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWaterEffect"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 100">
            <Button Height="45" Width="75" Content="还原" Click="ButtonBase_OnClick"/>
        </StackPanel>
        <local:WaterControl x:Name="WaterControl" FontSize="120" Value="0" Height="100" Width="100"/>
