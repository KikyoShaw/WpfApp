<UserControl x:Class="WpfWaterEffect.WaterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfWaterEffect"
             mc:Ignorable="d" x:Name="Aaa"
             d:DesignHeight="100" d:DesignWidth="100" Background="LightGreen">
    <Grid>
        <Canvas x:Name="Canvas"/>
        <TextBlock Text="{Binding Value,ElementName=Aaa, StringFormat=0.00}" 
                   FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
