<UserControl x:Class="WpfVerifyCode.VerifyCodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfVerifyCode"
             mc:Ignorable="d" x:Name="Aaa"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="{Binding ImageWidth,ElementName=Aaa}" 
          Height="{Binding ImageHeight,ElementName=Aaa}">
        <Image x:Name="VerifyCodeImage" Stretch="Fill"
               MouseLeftButtonDown="VerifyCodeImage_OnMouseLeftButtonDown"/> 
    </Grid>
</UserControl>
